{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "rootDir": "../",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": [
    "./*.ts",
    "../common/*.ts",
    "../packages/**/*.ts",
    "../types/*.ts"
  ]
}
